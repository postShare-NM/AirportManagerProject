@model AirportManager.Data.Flight

@{
    ViewData["Title"] = "Flight Details";
}

<h1>Flight Details</h1>

<div class="text-center border">
    <h4>Flight #@Model.Id_Flight</h4>
    <hr />
    <dl class="row" >
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id_Flight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id_Flight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dept_Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dept_Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arrival_Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Arrival_Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dept_Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dept_Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arrival_Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Arrival_Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dept_Port)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dept_Port)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arrival_Port)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Arrival_Port)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
    </dl>
</div>

<div class="btn-group-sm" style="margin-top:9px"><strong>
    <button class="btn btn-primary">@Html.ActionLink("Book a Ticket", "Index", "Ticket", Model)</button> | 
    
    @Html.ActionLink("Edit", "EditFlight", Model) |
    <a asp-action="Index">Back to List</a>
</strong>
</div>
