@model AirportManager.Data.Flight

@{
    ViewData["Title"] = "Edit Flight";
}

<h1>Edit Flight</h1>

<h4>Flight # @Model.Id_Flight</h4>
<hr />
<div class="row border">
    <div class="col-md-4">
        <form asp-action="EditFlight">
            <div class="form-group">
                <label asp-for="Id_Flight" class="control-label"></label>
                <input asp-for="Id_Flight" class="form-control" />
                <span asp-validation-for="Id_Flight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dept_Date" class="control-label"></label>
                <input asp-for="Dept_Date" class="form-control" />
                <span asp-validation-for="Dept_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arrival_Date" class="control-label"></label>
                <input asp-for="Arrival_Date" class="form-control" />
                <span asp-validation-for="Arrival_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dept_Time" class="control-label"></label>
                <input asp-for="Dept_Time" class="form-control" />
                <span asp-validation-for="Dept_Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arrival_Time" class="control-label"></label>
                <input asp-for="Arrival_Time" class="form-control" />
                <span asp-validation-for="Arrival_Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dept_Port" class="control-label"></label>
                <input asp-for="Dept_Port" class="form-control" />
                <span asp-validation-for="Dept_Port" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arrival_Port" class="control-label"></label>
                <input asp-for="Arrival_Port" class="form-control" />
                <span asp-validation-for="Arrival_Port" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group"><strong>
                    <input type="submit" value="Save" class="btn btn-primary" /> ||
                    <button class="btn btn-danger">@Html.ActionLink("DELETE", "DeleteFlight", Model)</button>
                    </strong>
                </div>
                

            </div>
        </form>
        

    </div>
</div>

<div><strong>
    <a asp-action="Index">Back to List</a>
</strong>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
